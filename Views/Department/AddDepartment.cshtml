@model DepartmentViewModel
@{
    ViewData["Department"] = "Add-Department";
}
<form class="form-check" asp-action="AddDepartment" asp-controller="Department">
<div class="form-group">
    <label asp-for="DepartmentId" hidden></label>
    <input type="text" asp-for="DepartmentId" hidden id="_departmentid" />
</div>
<div class="form-group">
    <label class="form-lable fw-bold" asp-for="DepartmentName">NameOfTheDepartment</label>
    <input asp-for="DepartmentName" class="form-control" id="_departmentname" />
    <span asp-validation-for="DepartmentName" class="text-danger"></span>

</div>

<div class="mt-3">
    <button type="submit" id="button1" class="btn btn-outline-primary">SAVE</button>
    <button type="submit" asp-action="Index" asp-controller="Department" class="btn btn-outline-danger">CANCEL</button>
</div>
</form>
